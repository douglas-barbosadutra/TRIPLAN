<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>it.contrader.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>it.contrader.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PlacesServlet</servlet-name>
		<servlet-class>it.contrader.servlets.PlacesServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>TourOperatorServlet</servlet-name>
		<servlet-class>it.contrader.servlets.TourOperatorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CityServlet</servlet-name>
		<servlet-class>it.contrader.servlets.CityServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlacesServlet</servlet-name>
		<url-pattern>/PlacesServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TourOperatorServlet</servlet-name>
		<url-pattern>/TourOperatorServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CityServlet</servlet-name>
		<url-pattern>/CityServlet</url-pattern>
	</servlet-mapping>
	
	
	
	<session-config>
		<session-timeout>4000</session-timeout>
	</session-config>
</web-app>